{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title_en": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title_bn": {
      "type": "string",
      "required": false
    },
    "cover_image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "breadcrumb_en": {
      "type": "json",
      "required": true
    },
    "breadcrumb_bn": {
      "type": "json"
    },
    "status": {
      "type": "boolean",
      "default": true
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "category"
    },
    "slug": {
      "type": "string",
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "unique": true,
      "required": true
    },
    "is_hot": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "string"
    },
    "keywords": {
      "type": "string"
    },
    "rating": {
      "max": 10,
      "min": 0,
      "default": 1,
      "type": "integer"
    }
  }
}
